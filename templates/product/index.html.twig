{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-4">Liste des Produits</h1>
    {% include 'layouts/flash_message.html.twig'%}
    <a href="{{ path('app_product_new') }}" class="btn btn-outline-success mb-3">Créer un nouveau produit</a>
    
    {# <a href="{{ path('app_product_stock_add_history', {'id': product.id}) }}" class="btn btn-primary mb-3">Stock</a> #}

    <table class="table table-striped" >
        <thead class="table table-dark">
            <tr>
                <th>Produit</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.description | slice(0,100) }}...</td>
                {# <td>{{ product.sub_category.name }}</td> #}
                <td>{{ product.price }}</td>
                <td>{{ product.image }}</td>
                {% if product.stock > 0 %}
                      <td>{{ product.stock }}</td>
                      {% else %}
                      <td><span class="text-danger">'Stock epuisé'</span></td>
                {% endif %}

                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-primary">Show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-warning">Modify</a>
                    <a href="{{ path('app_product_stock_add', {'id': product.id}) }}" class="btn btn-outline-success">Ajouter du stock</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun produit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
