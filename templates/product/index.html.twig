{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}



{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-4">Product index</h1>
    {% include 'layouts/flash_message.html.twig'%}
    <a href="{{ path('app_product_new') }}" class="btn btn-success mb-3">Create new</a>
    <table class="table table-striped" >
        <thead class="table table-dark">
            <tr>
                <th>Product</th>
                <th>Description</th>
                {# <th>Subcategory</th> #}
                <th>Price</th>
                <th>Image</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.description | slice(0,100) }}...</td>
                {# <td>{{ product.sub_category.name }}</td> #}
                <td>{{ product.price }}</td>
                <td>{{ product.image }}</td>
                {% if product.stock > 0 %}
                      <td>{{ product.stock }}</td>
                      {% else %}
                      <td><span class="text-danger">'Stock epuis√©'</span></td>
                {% endif %}
              

                
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-success">Show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-warning">Modify</a>
                    <a href="{{ path('app_product_stock_add', {'id': product.id}) }}" class="btn btn-outline-info">Ajouter du stock</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
