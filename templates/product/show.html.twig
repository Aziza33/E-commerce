{% extends 'base.html.twig' %}

{% block title %}Détail du produit{% endblock %}

{% block body %}
<div class="container my-5 pt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0 pt-5">Détail du produit</h3>
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-light btn-sm rounded-pill">
                ← Retour à la liste
            </a>
        </div>

        <div class="card-body p-4">
            <table class="table table-bordered table-hover align-middle">
                <tbody>
                    <tr>
                        <th class="bg-light text-end" style="width: 200px;">ID</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-end">Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-end">Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-end">Prix</th>
                        <td>{{ product.price }} €</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-end">Image</th>
                        <td>
                            {% if product.image %}
                                <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }}" class="img-fluid rounded shadow-sm" style="max-width: 250px;">
                            {% else %}
                                <em>Aucune image</em>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-end gap-3 mt-4">
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-primary btn-lg rounded-pill px-4">
                    Modifier
                </a>

                <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce produit ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                    <button class="btn btn-outline-danger btn-lg rounded-pill px-4">
                        Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
