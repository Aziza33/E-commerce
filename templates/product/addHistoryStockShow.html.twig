{% extends 'base.html.twig' %}

{% block title %}Historique du produit : {{ product.name }}{% endblock %}


{% block body %}
<div class="container">
    <h1 class="mt-4 mb-4 pt-5">Historique du produit : {{ product.name }}</h1>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Quantité ajoutée</th>
                <th>Date d'ajout</th>
            </tr>
        </thead>
        <tbody>
        {% for productAdded in productsAdded %}
            <tr>
                <td>{{ productAdded.id }}</td>
                <td>{{ productAdded.quantity }}</td>
                <td>{{ productAdded.createdAt|date('d/m/Y H:i', 'Europe/paris') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucun historique trouvé pour ce produit.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
