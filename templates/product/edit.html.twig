{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 p-4 bg-light">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark">Modifier le produit</h2>
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary rounded-pill shadow-sm">
                <i class="bi bi-arrow-left me-2"></i> Retour à la liste
            </a>
        </div>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="mb-3">
            {{ form_label(form.name, 'Nom du produit', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg rounded-3 shadow-sm'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control rounded-3 shadow-sm', 'rows': 4}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.price, 'Prix (€)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control rounded-3 shadow-sm'}}) }}
                {{ form_errors(form.price) }}
            </div>

            <div class="col-md-6 mb-3">
                {{ form_label(form.subCategory, 'Sous-catégorie', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                {{ form_widget(form.subCategory, {'attr': {'class': 'form-select rounded-3 shadow-sm'}}) }}
                {{ form_errors(form.subCategory) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                {{ form_widget(form.stock, {'attr': {'class': 'form-control rounded-3 shadow-sm'}}) }}
                {{ form_errors(form.stock) }}
            </div>

            <div class="col-md-6 mb-3">
                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control rounded-3 shadow-sm'}}) }}
                {{ form_errors(form.image) }}
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill shadow-sm">
                <i class="bi bi-save me-2"></i> Mettre à jour
            </button>

            {{ include('product/_delete_form.html.twig') }}
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
