
{% extends 'base.html.twig' %}

{% block title %}Sous Catégories{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Liste des sous-catégories</h1>
        <a href="{{ path('app_sub_category_new') }}" class="btn btn-outline-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Ajouter une sous-catégorie
        </a>
    </div>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show shadow-sm" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nom de la sous-catégorie</th>
                        <th scope="col">Catégorie</th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for sub_category in sub_categories %}
                    <tr>
                        <td>{{ sub_category.id }}</td>
                        <td>{{ sub_category.name }}</td>
                        <td>{{ sub_category.category ? sub_category.category.name : '—' }}</td>
                        <td class="text-end">
                            <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}" 
                               class="btn btn-sm btn-outline-primary shadow-sm">
                                <i class="bi bi-eye">Afficher</i>
                            </a>
                            <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" 
                               class="btn btn-sm btn-outline-warning shadow-sm ">
                                <i class="bi bi-pencil">Modifier</i>
                            </a>
                            <form method="post" action="{{ path('app_sub_category_delete', {'id': sub_category.id}) }}" 
                                  style="display:inline-block"
                                  onsubmit="return confirm('Are you sure you want to delete this subcategory?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sub_category.id) }}">
                                <button class="btn btn-sm btn-outline-danger shadow-sm">
                                    <i class="bi bi-trash">Supprimer</i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4 text-muted">
                            No subcategories found.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

