{% extends 'base.html.twig' %}

{% block title %}SubCategory Management{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">SubCategory List</h1>
        <a href="{{ path('app_sub_category_new') }}" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col"># ID</th>
                            <th scope="col">Name</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for sub_category in sub_categories %}
                        <tr>
                            <td class="fw-semibold">{{ sub_category.id }}</td>
                            <td>{{ sub_category.name }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}" 
                                   class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-eye"></i> Show
                                </a>
                                <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" 
                                   class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-4"></i>
                                <p class="mb-0">No records found</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
