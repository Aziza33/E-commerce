{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm border-0 rounded-4 w-50">
        <div class="card-body p-4">
            
            <!-- Titre -->
            <h2 class="fw-bold text-warning mb-4">
                <i class="bi bi-pencil-square"></i> Modifier une catégorie
            </h2>

            <!-- Formulaire -->
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name, 'Nom de la catégorie', {'label_attr': {'class': 'form-label fw-medium'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la catégorie'}}) }}
                </div>

                <!-- Boutons -->
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_category') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Annuler
                    </a>
                    <button type="submit" class="btn btn-warning shadow-sm text-white">
                        <i class="bi bi-save"></i> Modifier
                    </button>
                </div>
            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}

