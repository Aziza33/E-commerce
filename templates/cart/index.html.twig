{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container my-5" style="margin-top: 120px">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Mon Panier</h3>
            {% if total > 0 %}
                <span class="badge bg-success fs-6">Total : {{ total }} €</span>
            {% endif %}
        </div>

        <div class="card-body p-4">
            {% if items is empty %}
                <div class="alert alert-warning text-center p-4 fs-5 rounded">
                    Votre panier est vide 
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Produit</th>
                                <th class="text-center">Quantité</th>
                                <th class="text-end">Prix unitaire</th>
                                <th class="text-end">Sous-total</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in items %}
                                <tr>
                                    <!-- Image + Nom -->
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {% if item.product.image %}
                                                <img src="{{ asset('uploads/images/' ~ item.product.image) }}" alt="{{ item.product.name }}" class="img-thumbnail me-3" style="width: 70px; height: 70px; object-fit: cover;">
                                            {% else %}
                                                <img src="https://via.placeholder.com/70x70" class="img-thumbnail me-3" alt="Image indisponible">
                                            {% endif %}
                                            <span class="fw-bold">{{ item.product.name }}</span>
                                        </div>
                                    </td>

                                    <!-- Quantité avec boutons -->
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_cart_product_delete', {'id': item.product.id}) }}" class="btn btn-sm btn-outline-dark">➖</a>
                                            <span class="btn btn-sm btn-light disabled">{{ item.quantity }}</span>
                                            <a href="{{ path('app_cart_add', {'id': item.product.id}) }}" class="btn btn-sm btn-outline-dark">➕</a>
                                        </div>
                                    </td>

                                    <!-- Prix unitaire -->
                                    <td class="text-end">{{ item.product.price }} €</td>

                                    <!-- Sous-total -->
                                    <td class="text-end fw-bold">{{ item.product.price * item.quantity }} €</td>

                                    <!-- Supprimer complètement -->
                                    <td class="text-center">
                                        <a href="{{ path('app_cart_product_delete', {'id': item.product.id}) }}" 
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('Supprimer cet article du panier ?')">
                                            
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>

                        {% if total > 0 %}
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end fw-bold fs-5">Total :</td>
                                <td class="text-end fw-bold fs-5 text-success">{{ total }} €</td>
                                <td></td>
                            </tr>
                        </tfoot>
                        {% endif %}
                    </table>
                </div>

                <!-- Boutons de gestion -->
                <div class="d-flex flex-wrap justify-content-between align-items-center mt-4">
                    <a href="{{ path('app_home_page') }}" class="btn btn-outline-secondary mb-2">
                        ← Continuer mes achats
                    </a>

                    <div class="d-flex gap-2">
                        <a data-turbo="false" href="#" class="btn btn-primary">
                            Valider la commande
                        </a>
                        <a href="{{ path('app_cart_delete') }}" 
                           class="btn btn-outline-danger"
                           onclick="return confirm('Vider complètement le panier ?')">
                            Vider le panier
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
