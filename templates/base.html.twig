        {# ...................    CSS BARRE DE RESERVATION   ................. #}
        <style>
 .reservation-bar-fixed {
    position: fixed;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    background: white;
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 15px 25px;
    border-radius: 8px 8px 0 0;
    box-shadow: 0 -4px 15px rgba(0,0,0,0.1);
    font-family: 'Lora', serif;
    z-index: 9999; /* Toujours devant */
}

.reservation-item {
    display: flex;
    flex-direction: column;
}

.reservation-item label {
    font-size: 0.8rem;
    color: #777;
    margin-bottom: 5px;
}

.reservation-item input,
.reservation-item select {
    border: 1px solid #ccc;
    padding: 5px;
    font-size: 0.9rem;
    border-radius: 4px;
}

.divider {
    width: 1px;
    background: #ddd;
    height: 40px;
}

.btn-reserve {
    background: #bfa14a;
    color: white;
    padding: 10px 20px;
    font-weight: bold;
    text-decoration: none;
    border-radius: 4px;
    white-space: nowrap;
    transition: background 0.3s;
}

.btn-reserve:hover {
    background: #a78d3f;
}

/* Mobile */
@media (max-width: 768px) {
    .reservation-bar-fixed {
        flex-direction: column;
        align-items: stretch;
        gap: 10px;
        width: 100%;
        border-radius: 0;
        padding: 15px;
    }
    .divider {
        display: none;
    }
}


        </style>
